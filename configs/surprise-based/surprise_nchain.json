{
    "base_config_file": "configs/surprise-based/surprise.json",
    "algorithm": {
        "name": "surprise_nchain",
        "class": "ModelBasedBatchRLAlgorithm",
        "kwargs": {
            "num_epochs": 200,
            "batch_size": 256,
            "num_eval_steps_per_epoch":8000,
            "num_train_loops_per_epoch": 1000,
            "num_expl_steps_per_train_loop": 1,
            "num_trains_per_train_loop": 1,
            "num_train_models_per_epoch": 1000,
            "max_path_length": 59,
            "train_model_freq": 15,
            "min_num_steps_before_training": 200,
            "record_video_freq": 10,
            "silent": false
        }
    },
    "environment": [
        {
            "name": "expl_env",
            "class": "simple_env",
            "kwargs": {
                "env_name": "n_chain",
                "reward_scale": 1
            }
        },
        {
            "name": "eval_env",
            "class": "normalized_vector_env",
            "kwargs": {
                "env_name": "n_chain",
                "n_env":8,
                "reward_scale": 1
            }
        },
        {
            "name": "video_env",
            "class": "video_env",
            "kwargs": {
                "env_name": "n_chain"
            }
        }
    ]
}