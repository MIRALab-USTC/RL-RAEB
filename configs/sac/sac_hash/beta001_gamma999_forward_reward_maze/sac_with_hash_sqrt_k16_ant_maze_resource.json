{
    "base_config_file": "configs/sac/sac.json",
    "experiment":{
        "tag": "my_sac",
        "use_gpu": true,
        "seed": null,
        "base_log_dir": "/home/rl_shared/zhihaiwang/research/valid_exp_maze_resource/sac_hash",
        "exp_prefix": "sac_hash_ant_maze_resource"
    },
    "algorithm": {
        "name": "sac",
        "class": "batch_RL_algorithm",
        "kwargs": {
            "num_epochs": 10000,
            "batch_size": 256,
            "num_eval_steps_per_epoch":8000,
            "num_train_loops_per_epoch": 1000,
            "num_expl_steps_per_train_loop": 1,
            "num_trains_per_train_loop": 1,
            "max_path_length": 200,
            "min_num_steps_before_training": 5000,
            "record_video_freq": 10,
            "silent": false
        }
    },
    "environment": [
        {
            "name": "expl_env",
            "class": "simple_env",
            "kwargs": {
                "env_name": "ant_maze_resource_v1",
                "reward_scale": 1
            }
        },
        {
            "name": "eval_env",
            "class": "normalized_vector_env",
            "kwargs": {
                "env_name": "ant_maze_resource_v1",
                "n_env":8,
                "reward_scale": 1
            }
        },
        {
            "name": "video_env",
            "class": "video_env",
            "kwargs": {
                "env_name": "ant_maze_resource_v1"
            }
        }
    ],
    "pool": {
        "name": "pool",
        "class": "simple_pool_with_hash",
        "kwargs": {
            "env": "$expl_env",
            "max_size": 1e6,
            "hash_k": 16,
            "beta": 0.01
        }
    },
    "trainer":{
        "name": "trainer",
        "class": "hash_cnt_SAC_trainer",
        "kwargs": {
            "env": "$expl_env",
            "policy": "$policy",
            "qf": "$qf",
            "pool_with_hash": "$pool",
            "cnt_with_sqrt": true,
            "reward_scale":1,
            "policy_lr": 3e-4,
            "qf_lr": 3e-4,
            "soft_target_tau": 5e-3,
            "use_automatic_entropy_tuning": true,
            "alpha_if_not_automatic": 0.2,
            "discount": 0.999
        }
    }
}